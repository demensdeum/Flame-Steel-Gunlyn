{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ESNext",
      "strict": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "target": "ES2020",
      "lib": ["es2020", "dom", "dom.iterable"],
      "moduleResolution": "bundler",
      "types": [
        "three",
        "@webgpu/types"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  
